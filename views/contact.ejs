    <%-include('footer-home')-%>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    function contactus() {
      var data = {
        name: $("#name-field").val(),
        email: $("#email-field").val(),
        phone: $("#phone-field").val(),
        subject: $("#subject-field").val(),
        query: $("#textarea-field").val(),
      };
      $.ajax({
        url: "/contactus",
        method: "post",
        data: data,
        success: function (data) {
            Swal.fire('Sent!', 'We will get back to you soon', 'success')

        },
      });
      $("#name-field").val(""),
        $("#email-field").val(""),
        $("#phone-field").val(""),
        $("#subject-field").val(""),
        $("#textarea-field").val("");
    }
  </script>
