  <body>
    <%-include('navbar')-%>

    <section class="banner-inner">
      <div
        class="
          banner-wrapper banner-wrapper__banner-inner
          d-flex
          align-items-center
        "
      >
        <div class="container">
          <div class="banner-txt">
            <h1>Contact</h1>
          </div>
          <!-- End of .banner-txt -->
        </div>
        <!-- End of .container -->
      </div>
      <!-- End of .banner-wrapper -->
    </section>

    <section>
      <div class="container">
        <div class="contact-form-wrapper section-padding">
          <div class="row">
            <div class="col-md-7">
              <form
                action="#"
                method="POST"
                class="token-box contact-form"
                style="color: black !important"
              >
                <h3><i class="icon-envelope-open"></i>Send Us A Message</h3>
                <div class="form-group">
                  <label class="custom-label" for="name-field"
                    >What is your name?</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="name-field"
                    name="fname"
                    value=""
                  />
                </div>
                <!-- End of .form-group -->

                <div class="form-group">
                  <label class="custom-label" for="email-field"
                    >What is your work email?</label
                  >
                  <input
                    type="email"
                    class="form-control"
                    id="email-field"
                    name="email"
                  />
                </div>
                <!-- End of .form-group -->

                <div class="form-group">
                  <label class="custom-label" for="phone-field"
                    >What is your phone number?</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="phone-field"
                    name="phone"
                  />
                </div>
                <!-- End of .form-group -->

                <div class="form-group">
                  <label class="custom-label" for="subject-field"
                    >What do you want to talk about?</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="subject-field"
                    name="subject"
                  />
                </div>
                <!-- End of .form-group -->

                <div class="form-group">
                  <label class="custom-label" for="textarea-field"
                    >Tell us more about your quory...</label
                  >
                  <textarea
                    class="form-control"
                    id="textarea-field"
                    name="message"
                  ></textarea>
                </div>
                <!-- End of .form-group -->

                <button class="btn" onclick="contactus()" type="button">
                  Submit form
                </button>
              </form>
            </div>
            <!-- End of .col-md-7 -->

            <div class="col-md-5">
              <div class="info-widget-wrapper">
                <div class="info-widget">
                  <h4>If any Query Connect Us Now</h4>
                  <p>
                    Phone:
                    <a href="tel:+9956564113"
                      >+91 9956564113 / +91 9917005984</a
                    >
                  </p>

                  <p>
                    Email:
                    <a href="mailto:contact@karwt.com">contact@karwt.com</a>
                  </p>
                </div>

                <div class="info-widget">
                  <h4>Follow Us</h4>
                  <div class="social-icons">
                    <a
                      href="https://www.facebook.com/karwt"
