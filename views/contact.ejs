                      target="_blank"
                      rel="noopener"
                    >
                      <i class="fab fa-linkedin-in"></i>
                    </a>
                  </div>
                  <!-- End of .social-icons -->
                </div>
                <!-- End of .info-widget -->
              </div>
              <!-- End of .info-widget-wrapper -->
